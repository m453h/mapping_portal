{% extends 'public/base.html.twig' %}

{% block content %}

    <div class="page-title">
            <div class="section-inner">
                <h1>Datasets \ {{ dataset.name }}</h1>
            </div>
    </div>

    <div class="content white-space">
        <div class="space-20 col12"></div>
        <div class="section-inner">
            <div class="description">
                <h1><span class="green">Dataset:</span> <span class="lighter">{{ dataset.name }}</span></h1>
                <div class="space-10"></div>
                <p>{{ dataset.description }}</p>
                <div class="space-10"></div>
            </div>
            <div class="form">
                {{ form_start(form) }}
                <div class="col3">{{ form_row(form.region,{'id':'regionId'}) }}</div>
                <div class="col3">{{ form_row(form.district,{'id':'districtId'}) }}</div>
                <div class="col3">{{ form_row(form.ward,{'id':'wardId'}) }}</div>
                <div class="col3 last">{{ form_row(form.courtLevel) }}</div>
                <div class="col3">{{ form_row(form.reportType) }}</div>
                <div class="clear"></div>
                <div class="col3"><button type="submit" class="btn btn-primary" formnovalidate>Visualize Data</button></div>
                {{ form_end(form) }}
            </div>
        </div>

        <div class="space col12"></div>

        {% if listData is defined %}
            <div class="col12">
                <div class="section-inner">
                    <h2 class="lighter">Search Results</h2><br/>
                    <table class="data-grid">
                        <th class="number"><span>S/N</span></th>
                        <th><span>Region</span></th>
                        <th><span>District</span></th>
                        <th><span>Ward</span></th>
                        <th><span>Level</span></th>
                    {% for item in listData %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ item.region_name }}</td>
                        <td>{{ item.district_name }}</td>
                        <td>{{ item.ward_name }}</td>
                        <td>{{ item.description }}</td>
                    </tr>
                    {% endfor %}
                    </table>
                </div>

            </div>


        {% endif %}

    </div>
{% endblock %}
